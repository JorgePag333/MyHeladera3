<Window x:Class="MyHeladera.Ventas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHeladera"
        mc:Ignorable="d"
        Title="Ventas" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="Mostrar_Ventas" FontSize="25" Grid.Column="0" Grid.Row="0" Click="Mostrar_Ventas_Click">Mostrar Ventas</Button>
        <Button x:Name="Registar_Ventas" FontSize="25" Grid.Column="0" Grid.Row="1" Click="Registar_Ventas_Click">Registrar Ventas</Button>
        <Button x:Name="Modificar_Ventas" FontSize="25" Grid.Column="1" Grid.Row="0" Click="Modificar_Ventas_Click">Modificar Ventas</Button>
        <Button x:Name="Eliminar_Ventas" FontSize="25" Grid.Column="1" Grid.Row="1" Click="Eliminar_Ventas_Click">Quitar/Eliminar Ventas</Button>
        
                
    </Grid>
</Window>
